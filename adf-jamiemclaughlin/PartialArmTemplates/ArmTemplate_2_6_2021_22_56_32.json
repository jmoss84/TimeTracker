{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-jamiemclaughlin"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Archive')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Archive Tasks",
						"description": "A trigger to archive the Tasks table.",
						"type": "SqlServerStoredProcedure",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"storedProcedureName": "[[dbo].[sp_TaskArchive]"
						},
						"linkedServiceName": {
							"referenceName": "jamiemclaughlin",
							"type": "LinkedServiceReference"
						}
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/jamiemclaughlin')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Tasks')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "jamiemclaughlin",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "ID",
						"type": "int",
						"precision": 10
					},
					{
						"name": "TaskDate",
						"type": "date"
					},
					{
						"name": "StartTime",
						"type": "varchar"
					},
					{
						"name": "EndTime",
						"type": "varchar"
					},
					{
						"name": "TaskGroup",
						"type": "varchar"
					},
					{
						"name": "TaskSubGroup",
						"type": "varchar"
					},
					{
						"name": "Notes",
						"type": "varchar"
					},
					{
						"name": "ImportTimestamp",
						"type": "datetime",
						"precision": 23,
						"scale": 3
					},
					{
						"name": "TaskLevel",
						"type": "varchar"
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "Tasks"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/jamiemclaughlin')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/jamiemclaughlin')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "kv_jamiemclaughlin",
							"type": "LinkedServiceReference"
						},
						"secretName": "jamiemclaughlin-string"
					}
				},
				"connectVia": {
					"referenceName": "jamiemclaughlin-integrationruntime",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/kv_jamiemclaughlin')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/kv_jamiemclaughlin')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureKeyVault",
				"typeProperties": {
					"baseUrl": "https://kv-jamiemclaughlin.vault.azure.net/"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Overnight')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "Archive",
							"type": "PipelineReference"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Day",
						"interval": 3,
						"startTime": "2021-02-07T02:30:00Z",
						"timeZone": "UTC"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/Archive')]"
			]
		}
	]
}